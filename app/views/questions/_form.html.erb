<%= form_for(@question) do |f| %>

  <div class="field" >
    <%= f.label :title %>
    <br>
    <%= f.text_area :title %>
  </div>


  <div class="field">
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </div>

  <% if flash[:error] %>
      <div class="notice"><%= flash[:error] %></div>
  <% end %>

  <br> <br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
