<h1 class="question-header">Fancy Questions</h1>

<table>
  <thead>
    <tr>
      <th> Question List </th>

      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr >
          <td><br><%= question.title %></td>
        <td><%= link_to 'Details ', question %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Question', new_question_path %>
